<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:paddingHorizontal="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvChatIcon"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="37.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/ivUserProfilePic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@android:mipmap/sym_def_app_icon" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUserNameNewChat"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/cbAddNewChat"
        app:layout_constraintStart_toEndOf="@+id/cvChatIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nombre de usuario largo que se truncarÃ¡..." />

    <CheckBox
        android:id="@+id/cbAddNewChat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvUserEmailNewChat"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#81000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@id/cbAddNewChat"
        app:layout_constraintStart_toEndOf="@id/cvChatIcon"
        app:layout_constraintTop_toBottomOf="@+id/tvUserNameNewChat"
        tools:text="correo.ejemplo@dominio.com" />

</androidx.constraintlayout.widget.ConstraintLayout>
